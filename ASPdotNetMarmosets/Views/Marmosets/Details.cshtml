@model Marmosets
@{
    ViewData["Title"] = "En savoir plus";
    Marmosets marmosets = Model;
}
<body>

@if (marmosets != null)
{
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">@marmosets.Nom </h5>
        </div>
        <ul class="list-group list-group-flush">
           
            <li class="list-group-item">@Html.DisplayNameFor(m => m.Poids) : @marmosets.Poids</li>
           
            <li class="list-group-item">@Html.DisplayNameFor(m => m.Taille) : @marmosets.Taille</li>
            <li class="list-group-item">@Html.DisplayNameFor(m => m.Age) : @marmosets.Age</li>
        </ul>
        <div class="card-body">
            <a asp-action="Index" class="card-link">Retour à la liste</a>
        </div>
    </div>
}

</body>